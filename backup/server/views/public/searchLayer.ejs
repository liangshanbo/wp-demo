<div class="search-layer" id="s_layer" style="display: none">
    <header class="header-search search-more">
        <div class="search">
            <em class="search-icon"></em>
            <input @keyup.13="go_search" @input="input_input" id="s_layer_input" v-model="keyword" placeholder="Search products & brands" class="search-txt" type="text">
            <em class="search-close" v-show="keyword!==''" style="display: none" @click="click_text_null"></em>
        </div>
        <span class="search-cancel" @click="layer_hide">Cancel</span>
    </header>
    <section v-show="isShow>0" style="display: none" id="s_history" class="search-content">
        <p class="search-content-title">Recent Searchs<em class="search-content-del" @click="click_del_his"></em></p>
        <ul class="search-history">
            <li v-for="item in his_data"><a href="/search?keyword={{item}}" v-text="item"></a></li>
        </ul>
    </section>
</div>